<h1>Text</h1>
<h2>{{ section.settings.liquid-ref }}</h2>


<h1>Checkbox</h1>
{%  if section.settings.liquid-checkbox == true %}
    <h2> Checkbox is checked </h2>
{% else %}
    <h2> Checkbox is not checked </h2>
{% endif %}


<h1>Number</h1>
{% if section.settings.liquid-number > 0 %}
     {{ section.settings.liquid-number }}
{% endif %}

<h1>Radio</h1>
{{ section.settings.liquid-radio }}

<h1>Range</h1>

<h1>Select</h1>

<h1>Text Area</h1>

{% schema %}
{

     "name": "Liquid Reference",
     "settings": [
        {
            "id": "liquid-ref",
            "type": "text",
            "label": "A Reference for Shopify Liquid"
        },
        {
            "id": "liquid-checkbox",
            "type": "checkbox",
            "label": "A checkbox in liquid"
        },
        {
            "id": "liquid-number",
            "type": "number",
            "label": "Add a number"
        }
        {
            "id": "liquid-radio",
            "type": "number",
            "label": "Add a radio button"
            "options": [
                {
                    "value": "Option 1",
                    "label": "Option 1"
                },
                {
                    "value": "Option 2",
                    "label": "Option 2"
                }
            ]
        }
     ],
     "templates": ["index", "page", "product"],
     "presets": [
        {
            "name": "Liquid Reference",
            "category": "Reference"
        }
     ]

}
{% endschema %}